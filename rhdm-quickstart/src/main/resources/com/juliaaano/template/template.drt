template header
name
surname
greeting

package com.juliaaano.template;

import com.juliaaano.data.Person;
import com.juliaaano.data.Greeting;

template "greetings"

rule "Greeting_@{row.rowNumber}"
when
    Person(name == "@{name}", surname == "@{surname}")
then
    Greeting grt = new Greeting();
    grt.setGreeting("@{greeting}");
    insert ( grt );
end

end template
